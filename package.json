{
	"name": "lazyvercel",
	"description": "Terminal UI for managing Vercel deployments",
	"type": "module",
	"version": "0.9.2",
	"license": "MIT",
	"packageManager": "pnpm@10.23.0",
	"publishConfig": {
		"access": "public"
	},
	"homepage": "https://github.com/nivalis-studio/lazyvercel#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nivalis-studio/lazyvercel.git"
	},
	"bugs": {
		"url": "https://github.com/nivalis-studio/lazyvercel/issues"
	},
	"keywords": ["vercel", "tui", "terminal", "deployments", "cli"],
	"bin": {
		"lazyvercel": "dist/index.js"
	},
	"scripts": {
		"dev": "bun run --watch src/index.tsx",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"test": "bun test",
		"copy:themes": "node -e \"const fs=require('node:fs'); fs.cpSync('src/theme','dist/theme',{recursive:true});\"",
		"build": "zshy && pnpm run copy:themes",
		"prepack": "pnpm run build",
		"prepare": "lefthook install",
		"ts": "tsc --noEmit --incremental"
	},
	"dependencies": {
		"@opentui/core": "0.1.47",
		"@opentui/react": "0.1.47",
		"@vercel/sdk": "1.17.3",
		"cac": "6.7.14",
		"open": "11.0.0",
		"react": "19.2.0",
		"zod": "4.1.12"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.7",
		"@commitlint/cli": "20.1.0",
		"@commitlint/config-conventional": "20.0.0",
		"@nivalis/biome-config": "2.3.7",
		"@total-typescript/ts-reset": "0.6.1",
		"@types/bun": "1.3.3",
		"@types/node": "22.2.0",
		"@types/react": "^19.2.7",
		"lefthook": "2.0.4",
		"typescript": "5.9.3",
		"zshy": "0.6.0"
	},
	"zshy": "./src/index.tsx",
	"files": ["dist"],
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.cts",
	"exports": {
		".": {
			"types": "./dist/index.d.cts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	}
}
